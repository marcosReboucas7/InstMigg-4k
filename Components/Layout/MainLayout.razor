@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="background-color: #000000; color: white;" Elevation="1" Class="my-appbar" >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Dark" Edge="Edge.Start" Size="Size.Small" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.subtitle1">InstMigg 4k</MudText>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" Style="background-color: #000000; color: white;">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Style="background-color: #0a1930; color: white;">
        <MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

